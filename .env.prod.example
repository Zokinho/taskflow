# TaskFlow Production Environment
#
# Copy to .env.prod and fill in your values:
#   cp .env.prod.example .env.prod
#
# Generate secrets with:
#   openssl rand -base64 32

# Database (points to the postgres container)
DATABASE_URL="postgresql://taskflow:CHANGE_ME_DB_PASSWORD@postgres:5432/taskflow?schema=public"
POSTGRES_PASSWORD="CHANGE_ME_DB_PASSWORD"

# JWT (generate with: openssl rand -base64 32)
JWT_SECRET="CHANGE_ME"
JWT_REFRESH_SECRET="CHANGE_ME"

# Server
PORT=3002

# Telegram Bot
TELEGRAM_BOT_TOKEN=""

# OpenAI (for Whisper transcription)
OPENAI_API_KEY=""

# Google OAuth (requires a real domain for redirect URI)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_REDIRECT_URI="http://YOUR_VPS_IP/api/calendars/google/callback"

# Microsoft OAuth (requires a real domain for redirect URI)
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
MICROSOFT_REDIRECT_URI="http://YOUR_VPS_IP/api/calendars/microsoft/callback"

# Frontend URL (update to https://yourdomain.com when you add a domain)
FRONTEND_URL="http://YOUR_VPS_IP"

# Cron + Bot (start bot in the same process as cron jobs)
START_BOT_WITH_CRON=true
