{
  "name": "taskflow",
  "version": "0.1.0",
  "private": true,
  "description": "Personal productivity hub: calendars, tasks, contacts, and Telegram control",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/api/index.ts",
    "build": "tsc",
    "start": "node dist/api/index.js",
    "bot": "ts-node-dev --respawn --transpile-only src/bot/index.ts",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "cron": "ts-node-dev --respawn --transpile-only scripts/run-cron.ts",
    "web": "npm --prefix src/web run dev",
    "web:build": "npm --prefix src/web run build"
  },
  "dependencies": {
    "@prisma/client": "^6.0.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "googleapis": "^171.4.0",
    "grammy": "^1.39.3",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.0",
    "@types/node-cron": "^3.0.11",
    "prisma": "^6.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.0"
  }
}
